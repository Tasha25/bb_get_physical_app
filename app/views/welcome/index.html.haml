%h1 Git Fit

%script#exercises-index-template{type: "text/x-handlebars-template"}
  %h1 exercises index template
  %nav
    %button#new New Exercise
    %button#random Random Workout
  %ul#exercises


%script#exercises-new-template{type: "text/x-handlebars-template"}
  %h1 exercises new template
  %form
    %label{for: "exercise-name"} Name
    %input#exercise-name{type: "text", name: "name"}
    %label{for: "exercise-calories"} Calories
    %input#exercise-calories{type: "text", name: "calories"}
    %label{for: "exercise-difficulty"} Difficulty
    %select#exercise-difficulty{name: "difficulty"}
      %option{value: 1} 1
      %option{value: 2} 2
      %option{value: 3} 3
    %input{type: "submit", value: "Create"}
    %button#cancel Cancel

%script#exercise-show-template{type: "text/x-handlebars-template"}
  %p
    {{name}}
    %span.remove X

%script#workouts-template{type: "text/x-handlebars-template"}
  %h1 random workout template
  %ul#workouts
    {{#each workouts}}
    %li {{name}}
    {{/each}}
  #total
  %button#save save
